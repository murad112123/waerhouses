CREATE VIEW req_order_v AS SELECT req_order.id, req_order.req_id, material.id AS m_id, material.code, material.name, material.description, req_order.quantity, req_order.requester, req_order.price, req_order.total, req_order.link, req_order.project, req_order.priority, req_order.quantitiy_recive, req_order.price_recive, req_order.total_recive, req_order.seller_note from material, req_order WHERE req_order.m_id = material.id
